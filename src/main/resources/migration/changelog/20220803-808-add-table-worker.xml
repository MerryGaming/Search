<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="20220803-808-add-table-worker" author="YaLynk" >
    <createTable tableName="worker">
      <column name="id" type="int" autoIncrement="true">
        <constraints primaryKey="true" primaryKeyName="pk_class_id_class"/>
      </column>
      <column name="name" type="varchar(100)">
        <constraints nullable="false"/>
      </column>
      <column name="date" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="years_of_work" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="address" type="varchar(200)">
        <constraints nullable="false"/>
      </column>
      <column name="wage" type="double">
        <constraints nullable="false"/>
      </column>
      <column name="allowance" type="double" >
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>


</databaseChangeLog>